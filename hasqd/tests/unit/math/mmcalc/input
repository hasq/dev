define p print;

#define;
#define 1;
define x;

x x x x x x x;

define phello print "hello";
phello;

N=91[-0]+0;
pq = factors N;
assert size pq 2;
P = pq[0];
Q = pq[1];
#p P,Q;
N2 = N^2;
phi = (P-1)*(Q-1);
p ("N^2 = ".N*N), (" phi=".phi);

r1 = 2; k=3;
g = 1+3*N;
m = 4;
p ("r1=".r1), (" k=".k), (" g=".g), (" m=".m);

modulus=N2;
A=r1*(g^m);
p "A=".A;

# select random a
a = 5;
b = r1*( 1/a - 1);
p "b=".b;
B1=A+b;
B2=r1*(1/a)*(g^(a*m));
assert B1 B2;

# convert coefficient to rN
# select random r
r = 6;
rN = r^N;

gam = (1/r1) * a * B1;
B = rN * gam;
assert B^phi gam^phi;

p "gam^phi-1 = k*N*a*m*phi = ".assert gam^phi-1 k*N*a*m*phi;


#exit;

print "hello" . " ". "yello";
print 1+3+"aas1"+(1);
print 1+2*3;
#print aaa bbb print 1+4;
print print 1234;

aaa = 1+5;
aaa -= 2;
print "aaa=".(aaa+=1);

aaa = aaa,aaa+2;
print aaa*5;
print aaa[1,0];

print (aaa,aaa,aaa)+1;
delete aaa;
#print aaa+1;

modulus=36;
print 38+8;

print 3.2.1-4;

a=20;
b=7;
print a/b , a%b;

print (div a b) [1];

